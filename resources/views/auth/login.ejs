<section class="login flex justify-center pt-24">
    <div class="bg-white lg:w-4/12 md:6/12 w-10/12 m-auto my-10 shadow-md">
        <div class="py-8 px-8 rounded-xl">
            <h1 class="font-medium text-2xl mt-3 text-center">Login</h1>
        <form action="/login" method="POST" class="mt-6">
            <% if(messages.error) { %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %>
            <div class="my-5 text-sm">
                <label class="block text-black" for="username">
                    Email
                </label>
                <input name="email"
                class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full"
                    id="username" type="email" placeholder="Enter your email">
            </div>
            <div class="my-5 text-sm">
                <label class="block text-black" for="password">
                    Password
                </label>
                <input name="password"
                class="rounded-sm px-4 py-3 mt-3 focus:outline-none bg-gray-100 w-full"
                    id="password" type="password" placeholder="Enter your password">
            </div>
            <button type="submit" class="block text-center text-white bg-gray-800 p-3 duration-300 rounded-sm hover:bg-black w-full">Login</button>
        </form>
        <p class="mt-12 text-xs text-center font-light text-gray-400"> Don't have an account? <a href="/register" class="text-black font-medium"> Create One </a>  </p> 
    </div>
  </div>
</section>